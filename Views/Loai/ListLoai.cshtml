@model IEnumerable<LTW.Models.Loai>

@{
    ViewBag.Title = "ListLoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .promo-banner {
        width: 100%;
        padding: 0 0;
        margin-top: 20px;
    }

        .promo-banner img {
            width: 100%;
            height: 486px;
            object-fit: fill;
        }

    .product-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        border-bottom: 1px solid #e3ddbb;
    }

    .product-title {
        font-size: 20px;
        font-weight: 500;
    }

        .product-title span {
            color: #666;
            font-size: 16px;
            margin-left: 10px;
        }

    .category-grid {
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        gap: 20px;
        margin-top: 30px;
    }

    .category-item {
        text-align: center;
        transition: transform 0.3s ease;
        padding: 15px;
        border-radius: 8px;
        background-color: #fff;
    }

        .category-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .category-image {
        width: 150px;
        height: 150px;
        margin: 0 auto 15px;
        display: block;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .category-item:hover .category-image {
        transform: scale(1.05);
    }

    .category-name {
        font-size: 16px;
        color: #333;
        margin: 0;
        text-decoration: none;
        display: block;
        text-align: center;
        padding: 10px 0;
        transition: color 0.3s ease;
    }

    .category-item:hover .category-name {
        color: #000;
        font-weight: 500;
    }

    .category-item-link {
        text-decoration: none;
        color: inherit;
    }

        .category-item-link:hover {
            text-decoration: none;
            color: inherit;
        }

    .search-container {
        margin: 20px 0;
        display: flex;
        justify-content: flex-end;
        padding: 0 30px;
    }

    .search-form {
        width: 100%;
        max-width: 600px;
    }

    .search-input {
        width: 70%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-right: 10px;
    }

    .search-button {
        padding: 10px 20px;
        background-color: #17a2b8;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: #138496;
        }
</style>

<div class="search-container">
    @using (Html.BeginForm("ListLoai", "Loai", FormMethod.Get, new { @class = "search-form" }))
    {
        <div class="form-group form-inline">
            <input type="text"
                   class="search-input"
                   value="@ViewBag.Keyword"
                   name="searchString"
                   placeholder="Nhập tên loại cần tìm">
            <input type="submit"
                   class="search-button"
                   value="Tìm kiếm">
        </div>
    }
</div>

<!-- Static Banner -->
<section class="promo-banner">
    <img src="~/Content/Images/banner1.png" alt="Banner" />
</section>

<!-- Categories Section -->
<div class="app__container" style="background-color: transparent; margin-top: 20px;">
    <div class="grid wide">
        <div class="row sm-gutter">
            <div class="col l-12 m-12 c-12">
                <div class="product-header">
                    <h2 class="product-title">
                        DANH MỤC SẢN PHẨM
                        <span>(@Model.Count() items)</span>
                    </h2>
                </div>

                <div class="category-grid">
                    @foreach (var item in Model)
                    {
                        <div class="category-item">
                            <img src="@item.Hinh"
                                 alt="@item.TenLoai"
                                 class="category-image"
                                 onclick="window.location.href='@Url.Action("SanPhamLoai", "Loai", new { Id = item.MaLoai })'" />

                            @Html.ActionLink(item.TenLoai, "SanPhamLoai", "Loai",
                                new { Id = item.MaLoai },
                                new { @class = "category-name" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>