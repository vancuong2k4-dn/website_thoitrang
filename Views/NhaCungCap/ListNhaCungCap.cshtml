@model IEnumerable<LTW.Models.NCC>

@{
    ViewBag.Title = "ListNhaCungCap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .promo-banner {
        width: 100%;
        padding: 0 0;
        margin-top: 20px;
    }

        .promo-banner img {
            width: 100%;
            height: 486px;
            object-fit: fill;
        }

    .product-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        border-bottom: 1px solid #e3ddbb;
    }

    .product-title {
        font-size: 20px;
        font-weight: 500;
    }

        .product-title span {
            color: #666;
            font-size: 16px;
            margin-left: 10px;
        }

    .supplier-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        margin-top: 30px;
    }

    .supplier-card {
        background-color: #fff;
        border-radius: 8px;
        padding: 25px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #e3ddbb;
    }

        .supplier-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .supplier-icon {
        width: 60px;
        height: 60px;
        background-color: #f8f9fa;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
    }

        .supplier-icon i {
            font-size: 24px;
            color: #333;
        }

    .supplier-name {
        font-size: 18px;
        font-weight: 500;
        color: #333;
        margin-bottom: 15px;
    }

    .supplier-detail-btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: transparent;
        border: 1px solid #333;
        color: #333;
        text-decoration: none;
        border-radius: 4px;
        transition: all 0.3s ease;
        margin-top: 15px;
    }

        .supplier-detail-btn:hover {
            background-color: #333;
            color: #fff;
            text-decoration: none;
        }

    .search-container {
        margin: 20px 0;
        display: flex;
        justify-content: flex-end;
        padding: 0 30px;
    }

    .search-form {
        width: 100%;
        max-width: 600px;
    }

    .search-input {
        width: 70%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-right: 10px;
    }

    .search-button {
        padding: 10px 20px;
        background-color: #17a2b8;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: #138496;
        }
</style>

<!-- Static Banner -->
<section class="promo-banner">
    <img src="~/Content/Images/banner1.png" alt="Banner" />
</section>

<!-- Suppliers Section -->
<div class="app__container" style="background-color: transparent; margin-top: 20px;">
    <div class="grid wide">
        <div class="row sm-gutter">
            <div class="col l-12 m-12 c-12">
                <div class="product-header">
                    <h2 class="product-title">
                        DANH SÁCH NHÀ CUNG CẤP
                        <span>(@Model.Count() nhà cung cấp)</span>
                    </h2>
                </div>

                <div class="supplier-grid">
                    @foreach (var item in Model)
                    {
                        <div class="supplier-card">
                            <div class="supplier-icon">
                                <i class="fas fa-building"></i>
                            </div>
                            <h3 class="supplier-name">@item.TenNCC</h3>
                            @Html.ActionLink("Chi tiết nhà cung cấp", "Detail", new { id = item.MaNCC }, new { @class = "supplier-detail-btn" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>