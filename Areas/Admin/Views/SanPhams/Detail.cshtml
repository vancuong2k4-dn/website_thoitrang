@model LTW.Models.SanPham
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var culture = new System.Globalization.CultureInfo("vi-VN");
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chi Tiết Sản Phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("ListSanPham", "SanPhams")">Sản phẩm</a></li>
        <li class="breadcrumb-item active">Chi tiết sản phẩm #@Model.MaSP</li>
    </ol>

    <div class="row">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <img src="@Url.Content("~/" + Model.Hinh)"
                         alt="@Model.TenSP"
                         class="product-image mb-3" />
                </div>
            </div>
        </div>

        <!-- Thông tin cơ bản -->
        <div class="col-md-8 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fas fa-info-circle me-1"></i>
                        Thông tin sản phẩm
                    </div>
                    <div>
                        <a href="@Url.Action("Edit", new { id = Model.MaSP })" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit me-1"></i>Chỉnh sửa
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="product-details">
                        <div class="row mb-3">
                            <div class="col-md-3 text-muted">
                                <i class="fas fa-box me-2"></i>Tên sản phẩm
                            </div>
                            <div class="col-md-9 fw-bold">@Model.TenSP</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3 text-muted">
                                <i class="fas fa-tags me-2"></i>Loại sản phẩm
                            </div>
                            <div class="col-md-9">@Model.Loai.TenLoai</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3 text-muted">
                                <i class="fas fa-dollar-sign me-2"></i>Giá sản phẩm
                            </div>
                            <div class="col-md-9 text-success fw-bold">
                                @Model.GiaSP.ToString("#,##0", culture) ₫
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3 text-muted">
                                <i class="fas fa-warehouse me-2"></i>Số lượng tồn
                            </div>
                            <div class="col-md-9">
                                <span class="badge bg-info">@Model.SoLuongTon</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3 text-muted">
                                <i class="fas fa-building me-2"></i>Nhà cung cấp
                            </div>
                            <div class="col-md-9">@Model.NCC.TenNCC</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3 text-muted">
                                <i class="fas fa-align-left me-2"></i>Mô tả
                            </div>
                            <div class="col-md-9">@Model.MoTa</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a href="@Url.Action("ListSanPham")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
    }

    .product-image {
        max-width: 300px;
        max-height: 300px;
        object-fit: contain;
        border-radius: 8px;
    }

    .product-details .row {
        padding: 0.75rem;
        border-bottom: 1px solid #f0f0f0;
    }

        .product-details .row:last-child {
            border-bottom: none;
        }

    .badge {
        padding: 0.5em 1em;
        font-size: 0.9em;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>