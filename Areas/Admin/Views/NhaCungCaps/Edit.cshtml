@model LTW.Models.NCC
@{
    ViewBag.Title = "Chỉnh sửa nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chỉnh Sửa Nhà Cung Cấp</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("ListNhaCungCap", "NhaCungCaps")">Nhà cung cấp</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            Chỉnh sửa thông tin nhà cung cấp #@Model.MaNCC
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.MaNCC)

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-building me-1"></i>
                                Tên nhà cung cấp <span class="text-danger">*</span>
                            </label>
                            @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên nhà cung cấp" } })
                            @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-envelope me-1"></i>
                                Email <span class="text-danger">*</span>
                            </label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "example@domain.com" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-phone me-1"></i>
                                Số điện thoại <span class="text-danger">*</span>
                            </label>
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số điện thoại" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                Địa chỉ <span class="text-danger">*</span>
                            </label>
                            @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập địa chỉ" } })
                            @Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <a href="@Url.Action("ListNhaCungCap")" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-1"></i>Hủy
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-1"></i>Cập nhật
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
    }

    .form-control {
        border-radius: 4px;
        padding: 0.5rem 1rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus {
            border-color: #198754;
            box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
        }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .btn {
        padding: 0.5rem 1rem;
        font-weight: 500;
    }

    .btn-success:hover {
        transform: translateY(-1px);
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}