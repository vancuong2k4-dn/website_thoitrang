@model LTW.Models.NCC
@{
    ViewBag.Title = "Thêm nhà cung cấp mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Thêm Nhà Cung Cấp Mới</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("ListNhaCungCap", "NhaCungCaps")">Nhà cung cấp</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus-circle me-1"></i>
            Thông tin nhà cung cấp mới
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-building me-1"></i>
                                Tên nhà cung cấp <span class="text-danger">*</span>
                            </label>
                            @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên nhà cung cấp" } })
                            @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-envelope me-1"></i>
                                Email <span class="text-danger">*</span>
                            </label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "example@domain.com" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-phone me-1"></i>
                                Số điện thoại <span class="text-danger">*</span>
                            </label>
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số điện thoại" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                Địa chỉ <span class="text-danger">*</span>
                            </label>
                            @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập địa chỉ" } })
                            @Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <a href="@Url.Action("ListNhaCungCap")" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Lưu nhà cung cấp
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #e3e6ec;
    }

    .form-control {
        border-radius: 4px;
        padding: 0.5rem 1rem;
    }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .btn {
        padding: 0.5rem 1rem;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}